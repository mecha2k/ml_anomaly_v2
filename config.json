{
    "name": "AnomalyTransformer",
    "n_gpu": 1,

    "arch": {
        "type": "TransformerModel",
        "args": {
            "enc_in": 51,
            "c_out": 51,
            "win_size": 100
        }
    },
    "data_loader": {
        "type": "HmcDataLoader",
        "args":{
            "data_dir": "datasets/open",
            "batch_size": 256,
            "win_size": 100
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 200,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
