{
    "name": "AnomalyTransformer",
    "n_gpu": 1,

    "model": {
        "type": "TransformerModel",
        "args": {
            "enc_in": 49,
            "c_out": 49,
            "win_size": 100
        }
    },
    "data_loader": {
        "type": "HmcDataLoader",
        "args":{
            "data_dir": "datasets/open",
            "batch_size": 32,
            "win_size": 100,
            "stride": 1,
            "validation_split": 0.0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 1e-5,
            "amsgrad": false
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "rec_loss", "ass_dis"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 100,
        "anomaly_ratio": 10,
        "k": 3,

        "save_dir": "saved/",
        "save_period": 2,
        "verbosity": 2,
        
        "monitor": "min loss",
        "early_stop": 2000,

        "tensorboard": true
    }
}
